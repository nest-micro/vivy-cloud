{
  "name": "vivy-cloud",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": "haiweilian <haiweilian@foxmail.com>",
  "homepage": "https://github.com/nest-micro/vivy-cloud",
  "scripts": {
    "prepare": "husky install && pnpm build:micro && pnpm build:common",
    "preinstall": "npx only-allow pnpm",
    "commit": "npx git-cz",
    "lint:lint-staged": "lint-staged",
    "lint:eslint": "eslint --fix --cache \"**/*.{js,jsx,ts,tsx}\"",
    "build:micro": "tsc -b nest-micro/tsconfig.build.json",
    "build:common": "tsc -b vivy-common/tsconfig.build.json && cpx vivy-common/vivy-common-core/src/assets/** vivy-common/vivy-common-core/lib/assets",
    "docker:rm": "docker-compose -p vivy-cloud -f docker/docker-compose.yaml rm",
    "docker:stop": "docker-compose -p vivy-cloud -f docker/docker-compose.yaml stop",
    "docker:base": "docker-compose -p vivy-cloud -f docker/docker-compose.yaml up -d vivy-mysql vivy-redis vivy-nacos"
  },
  "dependencies": {
    "@nest-micro/brakes": "workspace:*",
    "@nest-micro/common": "workspace:*",
    "@nest-micro/config": "workspace:*",
    "@nest-micro/config-nacos": "workspace:*",
    "@nest-micro/discovery": "workspace:*",
    "@nest-micro/discovery-nacos": "workspace:*",
    "@nest-micro/http": "workspace:*",
    "@nest-micro/loadbalance": "workspace:*",
    "@nest-micro/proxy": "workspace:*",
    "@nestjs-modules/ioredis": "^1.0.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@vivy-cloud/common-core": "workspace:*",
    "@vivy-cloud/common-logger": "workspace:*",
    "@vivy-cloud/common-swagger": "workspace:*",
    "@vivy-cloud/common-security": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "mysql2": "^3.2.3",
    "nestjs-typeorm-paginate": "^4.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.15"
  },
  "devDependencies": {
    "@bfehub/eslint-config-typescript": "^1.3.3",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.191",
    "@types/node": "18.11.18",
    "commitizen": "^4.2.4",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "typescript": "^4.9.5"
  }
}
